index 54583b09fa..b6e538f394 100644
--- a/contrib/src/ffmpeg/rules.mak
+++ b/contrib/src/ffmpeg/rules.mak
@@ -156,6 +156,8 @@ FFMPEGCONF += --enable-pic --extra-ldflags="$(EXTRA_CFLAGS) -isysroot $(IOS_SDK)
 ifdef HAVE_NEON
 FFMPEGCONF += --as="$(AS)"
 endif
